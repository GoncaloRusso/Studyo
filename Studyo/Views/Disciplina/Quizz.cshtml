@model Studyo.Models.Quiz

@{
    ViewData["Title"] = "Quiz";
}

<style>

    .botao_simples {
        display: inline-block;
        width: 200px;
        height: 40px;
        margin: 20px 10px;
        background-color: transparent;
        color: white;
        border: 2px solid white;
        text-align: center;
        line-height: 40px;
        font-weight: bold;
        text-decoration: none;
    }

        .botao_simples:hover,
        .botao_simples:active {
            color: white;
            border-color: white;
            text-decoration: none;
        }

    .buttons {
        text-align: center;
    }

    h1 {
        padding-top:100px;
        padding-bottom: 20px;
        text-align: center;
    }

    input[type="radio"] {
        margin-top: 20px;
    }

</style>

<div>
    @foreach (var item in Model.QuizQuestions)
    {
        <h1>@Html.DisplayFor(modelItem => item.Question)</h1>

        @foreach (var answer in item.Answers)
        {
            <input type="radio" id="@answer.Answer" name="@item.Question" value="@answer.Answer">
            <label for="@answer.Answer">@Html.DisplayFor(modelItem => answer.Answer)</label>

            <br>
        }
    }

    <div class="buttons">
        <button class="botao_simples" onclick="history.back()">Voltar</button>
        <button class="botao_simples" asp-controller="" asp-action="">Submeter</button>
    </div>
</div>
