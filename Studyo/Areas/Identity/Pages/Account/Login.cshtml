@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}
<style>


    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;

    }

.login-box {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
    width: 600px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}



    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
        color: white;
        text-transform: uppercase;
        padding: 10px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-light {
        background-color: #f8f9fa;
        border: none;
        color: #212529;
        text-transform: uppercase;
        padding: 10px;
        cursor: pointer;
    }

        .btn-light:hover {
            background-color: #e2e6ea;
        }



</style>
<div class="login-container">
    <div class="login-box">
        <h1>Iniciar Sessão</h1>
        <form id="account" method="post">
            <div class="form-group">
                <input asp-for="Input.Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Nome de Utilizador | Email" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Palavra Pass" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div class="form-group">
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sessão</button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Esqueceu a sua palavra-passe?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registar como um novo utilizador</a>
                </p>
            </div>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
